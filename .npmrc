registry=https://registry.npmjs.org/
access=public
# 네트워크 안정성 개선
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Lumir Design System - NPM 설정

# 의존성 호이스팅 비활성화 (pnpm과 일관성 유지)
hoist=false

# 엄격한 peer dependencies 검사
strict-peer-deps=true

# 로그 레벨
loglevel=warn

# 캐시 정리 설정
cache-max=86400000

# workspace 관련 설정
workspaces-update=true
save-workspace-protocol=true

# 스토리북 빌드 시 메모리 최적화
maxsockets=1 
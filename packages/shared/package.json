{
  "name": "@lumir/shared",
  "version": "1.0.4",
  "type": "module",
  "description": "Lumir Design System Foundation & Primitives",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./foundation": "./foundation.json",
    "./icons": "./icons",
    "./styles": "./dist/styles.css",
    "./dist/css/foundation-tokens.css": "./dist/css/foundation-tokens.css",
    "./dist/styles.css": "./dist/styles.css",
    "./primitives/*": "./dist/primitives/*",
    "./utils": "./dist/utils",
    "./hooks": "./dist/hooks",
    "./types": "./dist/types"
  },
  "files": [
    "dist",
    "foundation.json",
    "icons",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lumir-design-system.git",
    "directory": "packages/shared"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "foundation",
    "primitives",
    "aerospace"
  ],
  "scripts": {
    "build:tokens": "node scripts/build-foundation-tokens.js",
    "build:components": "rollup -c",
    "build": "pnpm run build:tokens && pnpm run build:components",
    "build:watch": "concurrently \"pnpm run build:tokens -- --watch\" \"pnpm run build:components -- --watch\"",
    "foundation:changed": "echo 'Foundation 토큰 변경 감지됨. 모든 시스템 리빌드 트리거...' && pnpm run trigger-all-systems",
    "trigger-all-systems": "pnpm run build && pnpm run --filter=\"@lumir/system-*\" build:tokens",
    "evaluate:colors": "node scripts/color-evaluation-system.cjs",
    "validate:all": "pnpm run evaluate:colors",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "rollup": "^3.19.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "concurrently": "^7.6.0",
    "chokidar": "^3.5.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
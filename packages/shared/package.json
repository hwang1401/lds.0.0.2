{
  "name": "lumir-design-system-shared",
  "version": "1.0.8",
  "type": "module",
  "description": "Lumir Design System - Shared Components & Tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./foundation-tokens": "./dist/css/foundation-tokens.css",
    "./dist/css/foundation-tokens.css": "./dist/css/foundation-tokens.css",
    "./foundation-tokens/js": "./dist/js/foundation-tokens.js",
    "./foundation-tokens/scss": "./dist/scss/_foundation-tokens.scss"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lumir-design-system.git",
    "directory": "packages/shared"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tokens",
    "primitives",
    "aerospace"
  ],
  "scripts": {
    "build:tokens": "node scripts/build-foundation-tokens.js",
    "build:components": "rollup -c",
    "build": "pnpm run build:tokens && pnpm run build:components",
    "build:watch": "concurrently \"pnpm run build:tokens\" \"pnpm run build:components -- --watch\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "rollup": "^3.19.0",
    "rollup-plugin-postcss": "^4.0.2",
    "concurrently": "^7.6.0",
    "typescript": "^5.0.0"
  }
}
